{
  "type": "TemplateLayout",
  "template": "<v-card class=\"mx-auto my-12\" outlined><slot name=\"0\"></slot><v-card-title><h2>Custom TemplateLayout with JSONForms and Vuetify</h2></v-card-title><v-card-text><slot name=\"1\"></slot></v-card-text><v-divider class=\"mx-6\"></v-divider><v-card-title>JSON Data  <v-tooltip bottom color=\"error\" v-if=\"errors && errors.length > 0\"><template v-slot:activator=\"{ on: onTooltip }\"><v-icon v-on=\"onTooltip\" color=\"red\">mdi-alert-circle</v-icon></template><span>Validation Errors</span></v-tooltip><v-tooltip bottom color=\"success\" v-else><template v-slot:activator=\"{ on: onTooltip }\"><v-icon v-on=\"onTooltip\" color=\"green\">mdi-check-circle</v-icon></template><span>No Validation Errors</span></v-tooltip></v-card-title><v-card-text><slot name=\"2\"></slot></v-card-text></v-card>",
  "elements": [
    {
      "type": "TemplateLayout",
      "template": "<v-container class=\"secondary lighten-2\" fluid><v-row align=\"center\" justify=\"center\"><v-col><v-img src=\"https://jsonforms.io/img/logo.svg\" max-width=\"200px\" max-height=\"200px\" style=\"filter: invert(1); margin: auto;\"></v-img></v-col><v-spacer></v-spacer><v-col><v-img src=\"https://cdn.vuetifyjs.com/docs/images/logos/vuetify-logo-dark-text.svg\" max-width=\"200px\" max-height=\"200px\" style=\"margin: auto;\"></v-img></v-col></v-row></v-container>"
    },
    {
      "type": "VerticalLayout",
      "elements": [
        {
          "type": "HorizontalLayout",
          "elements": [
            {
              "type": "Control",
              "scope": "#/properties/name"
            },
            {
              "type": "Control",
              "scope": "#/properties/personalData/properties/age"
            },
            {
              "type": "Control",
              "scope": "#/properties/birthDate"
            }
          ]
        },
        {
          "type": "TemplateLayout",
          "template": "<div>Additional Information For <strong>{{ data.name }}</strong></div>"
        },
        {
          "type": "HorizontalLayout",
          "elements": [
            {
              "type": "Control",
              "scope": "#/properties/personalData/properties/height"
            },
            {
              "type": "Control",
              "scope": "#/properties/nationality"
            },
            {
              "type": "Control",
              "scope": "#/properties/occupation",
              "options": {
                "suggestion": [
                  "Accountant",
                  "Engineer",
                  "Freelancer",
                  "Journalism",
                  "Physician",
                  "Student",
                  "Teacher",
                  "Other"
                ]
              }
            }
          ]
        }
      ]
    },
    {
      "type": "TemplateLayout",
      "template": "<v-container fluid><v-row><v-col><pre>{{ JSON.stringify(data, null, 2) }}</pre></v-col></v-row></v-container>"
    }
  ]
}
